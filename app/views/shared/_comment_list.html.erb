<h2><%= Comment.model_name.human %></h2>
<% if commentable.comments.empty? %>
  <div><%= t('views.common.no_items', name: Comment.model_name.human) %></div>
<% else %>
  <% commentable.comments.each do |comment| %>
    <div>
      <header>
        <%= comment.user.name || comment.user.email %>
        <%= l(comment.created_at, format: :ymdhms) %>
      </header>
      <div>
        <%= comment.comment %>
      </div>
    </div>
    <br>
  <% end %>
<% end %>
<br>