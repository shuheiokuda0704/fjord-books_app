<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    <% if user_signed_in? %>
      | <%= link_to(t('devise.view.profile'), user_path(current_user)) %>
      <%= link_to(t('devise.view.logout'), destroy_user_session_path, method: 'delete') %>
    <% end %>
  </body>
</html>
